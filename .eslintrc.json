{
    "globals": {
        "use": false
    },

    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "indent": ["error", 2],
        "semi": "error",
        "quotes": ["error", "single"]
    }
}
